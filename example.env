# Django
SECRET_KEY=

# Docker
# if set to "true" will run dev servers in container
# instead or running production server
DEV_MODE=true

# Debugging
DEBUG=on
QUERY_LOGGING_ENABLED=false
# Debug pin can be set to "off" for local development.
# But, DO NOT do this in production.
WERKZEUG_DEBUG_PIN=
LOG_LEVEL=DEBUG

# DB
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=insecure-change-this
POSTGRES_DB_HOST=localhost
# Example - Not needed for Docker
# DATABASE_URL=postgresql://postgres:insecure-change-this@recipe-repo/recipe-repo

# CACHE
MEMCACHED_ENABLED=false
